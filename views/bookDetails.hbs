<div class="row justify-content-center mt-5">
    <div class="d-flex flex-column align-items-center col-6 col-md-4">
        <h3>{{title}}</h3>
        <img class="align-self-center" src="{{image_url}}" alt="image not found">  
        <div class="d-flex mt-3">
            <a class="btn btn-warning" href="/">
			Home
		    </a>
            <a class="btn btn-outline-info" href="/reviews/{{title}}" target="_blank">Find reviews</a>
        </div>

    </div>
    <div class="d-flex flex-column align-items-left col-md-8">
        <p class="lead">
            {{description}}
        </p>
        <code>Rating: {{rating}} ({{rating_count}} reviews)</code>
        {{#if hasMultipleAuthors}}
            <code>Author(s): {{authorsList}}</code>
        {{else}}
            <code>Author(s): {{authors}}</code>
        {{/if}}
        <code>Pages: {{pages}}</code>
        <code>Genres: {{genres}}</code>      
        
    </div>

</div>