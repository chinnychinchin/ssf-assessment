<h1>Letter {{letter}}</h1>

{{#each books}}
    <a href="/books/{{this.book_id}}"><h5>{{this.title}}</h5></a>
{{/each}}

{{#if beginningPg}}
    <form action="/books" method="get">
        <input type="hidden" name="startLetter" value="{{letter}}">
        <input type="hidden" name="offset" value="{{prevOffset}}">
        <button class="btn btn-primary" type="submit" disabled>Previous</button>
    </form>

{{else}}
    <form action="/books" method="get">
        <input type="hidden" name="startLetter" value="{{letter}}">
        <input type="hidden" name="offset" value="{{prevOffset}}">
        <button class="btn btn-primary" type="submit">Previous</button>
    </form>

{{/if}}

{{#if lastPg}}

    <form action="/books" method="get">                      
        <input type="hidden" name="offset" value="{{nextOffset}}">
        <input type="hidden" name="startLetter" value="{{letter}}">
        <button class="btn btn-primary" type="submit" disabled>Next</button>
    </form>

{{else}}
    <form action="/books" method="get">                      
        <input type="hidden" name="offset" value="{{nextOffset}}">
        <input type="hidden" name="startLetter" value="{{letter}}">
        <button class="btn btn-primary" type="submit">Next</button>
    </form>
{{/if}}


<a class="btn btn-warning" href="/">Home</a>